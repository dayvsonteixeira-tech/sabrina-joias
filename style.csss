body {
  font-family: Arial, sans-serif;
  background: #f2f2f2;
  padding: 20px;
}

h1, h2 {
  text-align: center;
}

form, select, button {
  width: 100%;
  margin-bottom: 10px;
}

form {
  background: #fff;
  padding: 15px;
  border-radius: 8px;
}

input, select, button {
  padding: 10px;
}

button {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

li {
  background: #fff;
  padding: 10px;
  margin-bottom: 8px;
  border-radius: 5px;
}

.vencido {
  background: #ffd6d6;
}

.pago {
  text-decoration: line-through;
  background: #d6ffd6;
}
